<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".NetworkFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络管理"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#3F51B5" />

    <!-- 网络开关控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <!-- WiFi开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WiFi"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/sw_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- 蓝牙开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="蓝牙"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/sw_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- 以太网开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="以太网"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/sw_ethernet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- 热点开关 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="热点"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/sw_hotspot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- 网络操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <!-- 第一行按钮：热点设置和以太网设置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_hotspot_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="热点设置"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#3F51B5"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:elevation="4dp" />

            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_ethernet_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="以太网设置"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#009688"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- 第二行按钮：WLAN设置和扫描WiFi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:spacing="16dp">

            <Button
                android:id="@+id/btn_wlan_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WLAN设置"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#03A9F4"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:elevation="4dp" />

            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/btn_scan_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="扫描WiFi"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:backgroundTint="#3F51B5"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</ScrollView>