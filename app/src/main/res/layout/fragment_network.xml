<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".NetworkFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络管理"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#3F51B5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <Button
            android:id="@+id/btn_toggle_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启WiFi"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="#03A9F4"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btn_toggle_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启蓝牙"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="#00BCD4"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btn_toggle_ethernet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="切换以太网"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="#009688"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btn_toggle_hotspot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启热点"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="#8BC34A"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btn_scan_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫描并显示WiFi列表"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>

</LinearLayout>