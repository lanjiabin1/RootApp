<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".StatusBarControlFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态栏控制"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#3F51B5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:spacing="16dp">

        <Button
            android:id="@+id/btn_hide_system_bars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="隐藏导航栏/状态栏"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_show_system_bars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="显示导航栏/状态栏"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:backgroundTint="#673AB7"
            android:textColor="@android:color/white"
            android:elevation="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="允许滑动呼出状态栏"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/sw_status_bar_swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注意事项："
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. 隐藏系统栏后，通过滑动边缘可以临时显示。\n"
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. 禁止滑动呼出状态栏后，只能通过按钮恢复显示。\n"
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. 部分设备可能不支持某些功能。"
        android:textSize="14sp"
        android:textColor="#666666" />

</LinearLayout>