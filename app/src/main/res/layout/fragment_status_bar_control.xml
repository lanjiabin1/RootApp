<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".StatusBarControlFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系统导航栏控制"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#3F51B5" />

    <!-- 系统导航栏显示控制 Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:background="#F5F5F5"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="允许系统导航栏显示"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_status_bar_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="当前状态：允许系统导航栏显示，可通过顶部下滑呼出"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <Switch
            android:id="@+id/sw_system_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:thumbTint="#3F51B5"
            android:trackTint="#E0E0E0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="功能说明："
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F9F9F9"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="允许系统导航栏显示："
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  - 开启：允许系统导航栏显示，可通过顶部下滑呼出"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  - 关闭：系统导航栏将被隐藏，无法通过任何方式呼出"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

</LinearLayout>